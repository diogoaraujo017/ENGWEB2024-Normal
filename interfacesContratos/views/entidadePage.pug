extends layout

block content

    .w3-card-4

        header.w3-container.w3-teal(style="margin-bottom: 40px; display: flex; ")
            h1 
                span Página da Entidade #{nome}
            a.w3-btn.w3-grey(href="/", style="margin-left: 40px;") Return 

        div.w3-container
            h2 Informação da Entidade
            h3 Nome: #{nome}
            h3 NIPC: #{nipc}
            h3 Soma dos Preços Contratuais: #{totalPrecoContratual}
            
        div.w3-container
            table.w3-table-all
                tr
                    th Id                            
                    th Objecto Contrato
                    th Data Celebração Contrato
                    th Preço Contratual
                    th NIPC 
                    th Entidade Comunicante
    
                each contract in clist
                    tr
                        td 
                            a(href="/" + contract._id)= contract._id
                        td= contract["objectoContrato"]
                        td= contract["dataCelebracaoContrato"]
                        td= contract["precoContratual"]
                        td
                            a(href="/entidades/" + contract["NIPC_entidade_comunicante"])= contract["NIPC_entidade_comunicante"]
                        td= contract["entidade_comunicante"]      

        footer.w3-container.w3-teal
            h5
                span Generated by Diogo Araújo 

    